%div.leaderBoard
  %div Leader Board
  %ul
    - @karma_leaders.each do |leader|
      %li
        = link_to image_tag(leader.image, alt: leader.name, size: '38x38'), "https://github.com/#{leader.nickname}"
        = (leader.name || leader.nickname).camelcase
        (
        = leader.total_karma
        )

