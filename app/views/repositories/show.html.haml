- content_for :head do
  = stylesheet_link_tag "repo/repositories"

= render "shared/fork", name: @repo.name, owner: @repo.owner

- content_for :sidebar do
  = render "sidebar", repo: @repo

%a{href: "http://github.com/#{@repo.owner}/#{@repo.name}"}
  %h2.github-repo-name= @repo.name.capitalize
%p= @repo.description

%hr
= render "notes"
