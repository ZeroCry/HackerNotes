.heading {
  font-family: "LaneNarrowRegular", Arial, Helvetica, sans-serif;
  font-weight: normal;

}

.repo-list {
  font-size: 18px;
  li a {
    text-transform: capitalize;
  }
}

div.tweetbox {
  height: 190px;
  padding: 30px 0;
}

div.search_form {
  clear: left;
  text-align: center;
  padding: 30px 0;
  h3 {
    margin-bottom: 0;
  }
}

div.user_repos {
  h3 {
    font-size: 25px;
    margin-bottom: 0;
  }
  li {
    font-size: 16px;
    text-transform: capitalize;
  }
  ul {
    margin-bottom: 20px;
  }
}

div.home {
  margin-top: 50px;

  h4.title {
    margin-top: 40px;
    font-size: 20px;
    margin-bottom: 5px;
  }
}

div.leaderBoard {
  width: 240px;
  height: 290px;
  font-family: "LaneNarrowRegular", Arial, Helvetica, sans-serif;
  font-weight: bold;
  font-size: 16px;
  border: outset;
  padding: 8px;
  display: inline-block;
  float: right;
  div {
    text-align: center;
    margin: 3px;
    margin-bottom: 10px;
  }
  ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
    li {
      height: 42px;
      margin: 5px;
      img {
        margin-bottom: -10px;
      }
    }
  }
}

.gist-file {
  padding: 12px;
  margin-top: 35px;
  h3 {
    font-size: 25px;
    line-height: 35px;
  }
}

div.repo_logos {
  h2 {
    text-align: center;
  }
  img {
    height: 60px;
    margin: 25px;
  }
}

div.news {
  font-family: cursive;
  display: inline-block;
  width: 600px;
  height: 330px;
  p { padding-top: 8px; }
  img { float: left; margin: 0 10px 0 0; }
  span { font-weight: bold; }
  div { font-size: 18px; font-weight: bold; }
}

/* ----copyright---- */
.copyright{
  margin-top: 40px;
  margin-bottom: 8px;
  padding-top: 13px;
  float:left;
  width:100%;
  background:url(<%= asset_path 'line_border.gif' %>) repeat-x;
}
.copyright div {
  float: right;
}
.copyright small{
  font-size:11px;
}
.copyright a{
  text-decoration:none;
}
